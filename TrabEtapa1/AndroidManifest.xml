<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.grupo5.trabetapa1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />
	<uses-permission 
	    android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.grupo5.trabetapa1.main.YambApplication">
        <activity
            android:name="com.grupo5.trabetapa1.activities.TimelineActivity"
            android:label="@string/title_activity_timeline" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.grupo5.trabetapa1.activities.StatusActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.grupo5.trabetapa1.activities.PreferencesActivity"
            android:label="@string/title_activity_preferences" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.grupo5.trabetapa1.activities.DetailedActivity"
            android:label="@string/title_activity_detailed" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.grupo5.trabetapa1.activities.BaseActivity">
        </activity>
    </application>
</manifest>